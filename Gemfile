ruby '2.1.5'
source 'https://rubygems.org'

# We kinda need it
gem 'rake'

# For database interaction
gem 'activerecord'
gem 'sqlite3'

gem 'tilt'

# For parsing expressions in a defined grammar
gem 'citrus'

group :development do
  gem 'pry'
  gem 'pry-doc'
end

group :test do
  # adds an `around` block for minitest
  gem "minitest-around"
  # Very simple mocking lib for minitest
  gem "mocha"
end
